<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ssm.demo.dao.PUserDao">
    <parameterMap id="parameterMap" type="com.ssm.demo.entity.PUser"></parameterMap>
    <resultMap id="resultMap" type="com.ssm.demo.entity.PUser">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>
    <sql id="columnSql">
        <trim suffixOverrides=",">
            t.id,
            t.uname,
            t.upswd,
        </trim>
    </sql>
    <sql id="column_list">
        id,uname,upswd
    </sql>
    <select id="selectPUserById" resultMap="resultMap" parameterType="java.lang.Integer">
        SELECT
        <include refid="column_list"/>
        FROM
        p_user
        WHERE id=#{id,jdbcType=INTEGER}
    </select>
    <select id="findByUsernameAndPwd" resultMap="resultMap" parameterType="java.util.Map">
        SELECT
        <include refid="columnSql"></include>
        FROM p_user t
        WHERE t.uname = #{uname,jdbcType=VARCHAR} and t.upswd = #{upswd,jdbcType=VARCHAR}
    </select>
</mapper>